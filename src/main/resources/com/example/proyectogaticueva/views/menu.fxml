<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectogaticueva.controller.MenuController">
   <top>
       <MenuBar>
           <menus>
               <Menu mnemonicParsing="false" text="Usuario">
                   <items>
                       <MenuItem mnemonicParsing="false" onAction="#crearUsuario" text="Crear" />
                       <MenuItem mnemonicParsing="false" onAction="#editarUsuario" text="Editar" />
                       <MenuItem mnemonicParsing="false" onAction="#editarCredenciales" text="Cambiar clave usuario"/>
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Animales">
                   <items>
                       <MenuItem mnemonicParsing="false" onAction="#crearAnimal" text="Crear" />
                       <MenuItem mnemonicParsing="false" onAction="#editarAnimal" text="Editar" />
                       <MenuItem mnemonicParsing="false" text="Historial clinico" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Adopciones">
                   <items>
                       <MenuItem mnemonicParsing="false" onAction="#crearAdopcion" text="Crear" />
                       <MenuItem mnemonicParsing="false" onAction="#editarAdopcion" text="Editar" />
                   </items>
               </Menu>
               <Menu mnemonicParsing="false" text="Adoptante">
                   <items>
                       <MenuItem mnemonicParsing="false" text="Crear" />
                       <MenuItem mnemonicParsing="false" text="Modificar" />
                   </items>
               </Menu>
        </menus>
      </MenuBar>
   </top>
    <center>
        <AnchorPane fx:id="contenedorCentral" />
    </center>
</BorderPane>
