<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectogaticueva.controller.AnimalController">
   <children>
      <Label layoutX="162.0" layoutY="39.0" text="Bienvenido al modulo  animal">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <ImageView fx:id="imgAnimal" fitHeight="123.0" fitWidth="193.0" layoutX="14.0" layoutY="102.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image  url="@../../../../Imagen/logo.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="txtBuscarIdentificador" layoutX="346.0" layoutY="98.0" promptText="Buscar chip identificador" />
      <Label fx:id="lblBuscarIdentificador" layoutX="206.0" layoutY="102.0" text="Buscar chip identificador:" />
      <Button fx:id="btnBuscarAnimal" layoutX="501.0" layoutY="98.0" mnemonicParsing="false" text="Buscar" onAction="#buscarAnimal"/>
      <TextField fx:id="txtIdentificador" layoutX="217.0" layoutY="152.0" promptText="chip identificador" />
      <TextField fx:id="txtNombre" layoutX="403.0" layoutY="151.0" promptText="nombre" />
      <TextField fx:id="txtFechaNacimiento" layoutX="217.0" layoutY="201.0" promptText="dd/mm/yyyy (Fecha nacimiento)" />
      <TextField fx:id="txtSexo" layoutX="403.0" layoutY="201.0" promptText="sexo" />
       <Button fx:id="btnGuardarAnimal" layoutX="442.0" layoutY="327.0" mnemonicParsing="false" text="Guardar cambios" onAction="#guardarCambioAnimal" />
       <Button fx:id="btnCrearAnimal" layoutX="442.0" layoutY="327.0" mnemonicParsing="false" text="Guardar cambios" onAction="#crearAnimal" />
      <Button fx:id="btnSubirFoto" layoutX="22.0" layoutY="252.0" mnemonicParsing="false" text="Modificar Imagen" onAction="#cargarImagen" />
      <TextField fx:id="txtRaza" layoutX="403.0" layoutY="246.0" promptText="raza animal" />
      <TextField fx:id="txtFechaDeceso" layoutX="217.0" layoutY="252.0" promptText="dd/mm/yyyy (Fecha deceso)" />
   </children>
</AnchorPane>
